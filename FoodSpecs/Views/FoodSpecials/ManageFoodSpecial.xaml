<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
		x:Class="FoodSpecs.ManageFoodSpecial"
		Padding="10,10,0,10">
	<ContentPage.ToolbarItems>
		<ToolbarItem Name="Manage" Order="Primary" Icon="manage.png" Clicked="ManageSpec"></ToolbarItem>
 	</ContentPage.ToolbarItems>
	<StackLayout Margin="10,0,0,15">
		<!--Readonly View-->
		<StackLayout x:Name="ReadonlyView">
			<Label x:Name="RestaurantName" TextColor="Black" FontSize="Medium" FontAttributes="Bold" Margin="0,0,0,20"></Label> 
			<Label x:Name="lblTitle" TextColor="Black" FontSize="Medium"></Label>
			<Label x:Name="lblDescription" TextColor="Black" FontSize="Medium"></Label>
			<Label x:Name="lblDays" TextColor="Black" FontSize="Medium"></Label>
			<Label x:Name="lblHours" TextColor="Black" FontSize="Medium"></Label>
		</StackLayout>
	</StackLayout>
</ContentPage>
